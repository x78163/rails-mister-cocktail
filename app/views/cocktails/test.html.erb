


<h1 class="text-center"> Joe's Cocktail Emporium</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card text-center">

       <div class="card-header" style="background-image: url('http://www.seriouseats.com/images/2014/11/20141104-cocktail-party-old-fashioneds-holiday-vicky-wasik-3.jpg')">
       </div>


       <div class="card-body text-center">
        <%= link_to c.name, cocktail_path(c) %>
        <p><%= c.name %></p>
      </div>

    </div>
  </div>
  <% end %>
</div>
</div>

<p class="text-center">

  <%= link_to "new cocktail", new_cocktail_path %>
</p>
