<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h1 class="text-center"><%= @cocktail.name %>   </h1>
<p class="text-center"> <% if @cocktail.photo?  %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
  <% end %></p>

    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-sm-6 ">
        <br>
        <h2>Ingredients  <%= link_to "Add", new_cocktail_dose_path(@cocktail) , class: "btn btn-primary"%> </h2>
        <br>
        <ul>
          <% @cocktail.doses.each do |r| %>
          <li>
            <h3> <strong> A <%= r.description %> of:  </strong> <%= r.ingredient.name %>       <%= link_to "Delete", dose_path(r), class: "btn btn-primary",
              method: :delete,
              data: { confirm: "are you sure" } %></h3>

            </li>

            <% end %>
          </ul>
          <%= render 'shared/dose_form', ctail: @cocktail, dtail: @dose %>
      <%= link_to 'Back', cocktails_path %>
        </div>

      </div>
    </div>

    </div>
  </div>
</div>








